# Example Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# Azure OpenAI Configuration
# =============================================================================
# Your Azure OpenAI endpoint URL
AZURE_OPENAI_ENDPOINT=https://your-openai-resource.openai.azure.com/

# Your Azure OpenAI API key
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here

# Your deployed model name in Azure OpenAI
AZURE_OPENAI_DEPLOYMENT=your-gpt-deployment-name

# API version for Azure OpenAI (usually 2024-02-15-preview or later)
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# =============================================================================
# Azure Content Safety Configuration
# =============================================================================
# Your Azure Content Safety endpoint URL
AZURE_CONTENT_SAFETY_ENDPOINT=https://your-content-safety-resource.cognitiveservices.azure.com/

# Your Azure Content Safety API key
AZURE_CONTENT_SAFETY_KEY=your_azure_content_safety_key_here

# =============================================================================
# Authentication & Security
# =============================================================================
# Secret key for JWT token signing (use a strong, random string)
JWT_SECRET=your_very_secure_jwt_secret_key_change_this_in_production

# JWT token expiration time in minutes (default: 60 minutes)
JWT_EXPIRE_MINUTES=60

# =============================================================================
# Database Configuration
# =============================================================================
# Database URL (SQLite for local development)
DATABASE_URL=sqlite:///./app.db

# =============================================================================
# Application Settings
# =============================================================================
# Environment mode (development, staging, production)
ENVIRONMENT=development

# Application host (usually 0.0.0.0 for containers, 127.0.0.1 for local)
HOST=127.0.0.1

# Application port
PORT=8000

# Debug mode (true for development, false for production)
DEBUG=true

# =============================================================================
# Content Safety Thresholds (0-7, where 7 is most restrictive)
# =============================================================================
# Threshold for hate speech detection
HATE_THRESHOLD=2

# Threshold for violence detection
VIOLENCE_THRESHOLD=2

# Threshold for sexual content detection
SEXUAL_THRESHOLD=2

# Threshold for self-harm content detection
SELF_HARM_THRESHOLD=2

# =============================================================================
# Data Retention Settings
# =============================================================================
# Number of days to retain conversation data (default: 30)
RETENTION_DAYS=30

# Enable automatic data cleanup (true/false)
AUTO_CLEANUP_ENABLED=true

# =============================================================================
# Logging Configuration
# =============================================================================
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path (leave empty to log to console only)
LOG_FILE=

# =============================================================================
# CORS Settings (for frontend integration)
# =============================================================================
# Allowed origins for CORS (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# =============================================================================
# Rate Limiting (requests per minute per user)
# =============================================================================
RATE_LIMIT_PER_MINUTE=60

# =============================================================================
# Azure Deployment Settings (optional, for production)
# =============================================================================
# Azure Resource Group name
# AZURE_RESOURCE_GROUP=your-resource-group

# Azure Web App name
# AZURE_WEBAPP_NAME=your-webapp-name

# Azure Container Registry name
# AZURE_CONTAINER_REGISTRY=your-acr-name

# =============================================================================
# Additional Security Settings
# =============================================================================
# Enable HTTPS redirect in production
FORCE_HTTPS=false

# Session timeout in minutes
SESSION_TIMEOUT=1440

# Maximum file upload size in MB
MAX_UPLOAD_SIZE=10